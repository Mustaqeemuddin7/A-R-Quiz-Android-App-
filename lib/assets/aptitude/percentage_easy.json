    {
      "id": 1,
      "question": "What is 25% of 200?",
      "options": [
        "25",
        "40",
        "50",
        "75"
      ],
      "correct_option": "50",
      "explanation": "25% = 25/100 = 1/4, so 25% of 200 = 200 × 1/4 = 50"
    },
    {
      "id": 2,
      "question": "If 30% of a number is 60, what is the number?",
      "options": [
        "150",
        "180",
        "200",
        "240"
      ],
      "correct_option": "200",
      "explanation": "Let the number be x. Then, 30% of x = 60 ⇒ (30/100)x = 60 ⇒ x = (60 × 100)/30 = 200"
    },
    {
      "id": 3,
      "question": "A shirt's price is reduced by 20% from $50. What is the new price?",
      "options": [
        "$30",
        "$35",
        "$40",
        "$45"
      ],
      "correct_option": "$40",
      "explanation": "20% reduction means 80% of original price remains. So, new price = $50 × (80/100) = $40"
    },
    {
      "id": 4,
      "question": "What percentage of 80 is 20?",
      "options": [
        "15%",
        "20%",
        "25%",
        "30%"
      ],
      "correct_option": "25%",
      "explanation": "Percentage = (Part/Whole) × 100 = (20/80) × 100 = 25%"
    },
    {
      "id": 5,
      "question": "In a class of 50 students, 15 are girls. What percentage of the class are boys?",
      "options": [
        "65%",
        "70%",
        "75%",
        "80%"
      ],
      "correct_option": "70%",
      "explanation": "Number of boys = 50 - 15 = 35, Percentage of boys = (35/50) × 100 = 70%"
    }
  ]
